<!DOCTYPE html>

<html>

  <head>
    <title>Chronopuncture</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

      <nav class="navigation">
        <ul>
          <li><%= link_to 'English', root_path(locale: :en) %> <%= link_to 'Русский', root_path(locale: :ru) %></li>
        </ul>
      </nav>
  <% if doctor_signed_in? %>
      <%= link_to "страница доктора", patients_path, class: 'btn-control'  %>
      <h3>Город доктора: <%= current_doctor.city.name %></h3>
      <h3>Таймзона доктора: <%= current_doctor.city.time_zone %></h3>
  <% end %>
      <p class="notice"><%= notice %></p> <!-- это от гема devise -->
      <p class="alert"><%= alert %></p>
     <!--  это от гема devise -->
      <%= yield %>



  </body>

</html>
