<!DOCTYPE html>
 <head>
  <title><%= @title || 'Chrono' %></title>
</head>

<html>

  <head>
    <title>Chronopuncture</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'bar_chart', 'data-turbolinks-track': 'reload' %>

  </head>


  <body>


  <% if doctor_signed_in? %>
      <nav class="navigation">
        <ul>
          <li><%= link_to 'English', root_path(locale: :en) %> <%= link_to 'Русский', root_path(locale: :ru) %></li>
        </ul>
      </nav>
      <%= link_to "страница доктора", patients_path, class: 'btn-control'  %>
      <h3>Город доктора: <%= current_doctor.city.name %></h3>
